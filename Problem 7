#include<iostream>

using namespace std;

int main ()
{
	
	int number, b, a;
	
	do
	{
		cout<< "Enter a number: "; cin>> number;
		
		if (number <= 0)
			cout<< "Thank you!";
		else if (number > 0)
			{
			b= 0;
			for (int a=1;a<=number;++a)
			b += a;
				
				cout<< "The sum of all whole numbers from 1 to " << number << " is: " << b << " " <<endl;
			}
	
}
	while (number > 0);

	
	return 0;
	
}
