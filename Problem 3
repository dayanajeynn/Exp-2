#include<iostream>
#include<conio.h>
#include<cmath>
#include<iomanip>


using namespace std;

int main()
{ 
	int x;
	float y, v, z;
	z = 2.5;
	cout<< "Enter x: " ; cin>> x;
	cout<< "Enter y: " ; cin>> y;
	
	switch (x)
	{ 
		case 1: 
		if ( y > 1 && y < 5)
		cout<< "The V is: " <<setprecision(3) << (x * y * z);
		
		else if (y>=5)
		cout<< "The V is: " <<setprecision(3) << x + (y / z);
		break;
		
		case 2:
		if ( y <= 5)
		cout<< "The V is: " <<setprecision(3) << abs ((x-y) / z);
		else
		cout<< "The V is: " <<setprecision(3) <<  x - sqrt(y+z);
		break;
		
		default:
			cout<< "The V is: " <<setprecision(3) << x + y + z;
	}
	
	
	_getch();
	return 0;
}

